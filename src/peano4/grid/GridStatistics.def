// have to know whether we are using MPI
#include "config.h"

Packed-Type: short int;


class peano4::grid::GridStatistics {
  persistent parallelise int  numberOfRefinedVertices;
  persistent parallelise int  numberOfUnrefinedVertices;
  persistent parallelise int  numberOfErasingVertices;
  persistent parallelise int  numberOfRefiningVertices;

  persistent parallelise int  numberOfLocalUnrefinedCells;
  persistent parallelise int  numberOfRemoteUnrefinedCells;
  persistent parallelise int  numberOfLocalRefinedCells;
  persistent parallelise int  numberOfRemoteRefinedCells;
  
  /**
   * Stores the number of sweeps since the last grid sweep that did change the
   * mesh.
   */ 
  persistent             int  stationarySweeps;

  persistent parallelise packed bool  coarseningHasBeenVetoed;
};
