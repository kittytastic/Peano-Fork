#!/bin/bash
#SBATCH -t 02:00:00
#SBATCH --exclusive
#SBATCH -p par7.q
#SBATCH -N 4
#SBATCH --array=1-24
#SBATCH --ntasks-per-node=1
#SBATCH --mail-type=END
#SBATCH --mail-user=tobias.weinzierl@durham.ac.uk

source /etc/profile.d/modules.sh

module purge
module load intel/2019.5
module load intelmpi/intel/2019.6
module load gcc/9.3.0

export OMP_NUM_THREADS=$SLURM_ARRAY_TASK_ID 

mpirun ./peano4 --threads $SLURM_ARRAY_TASK_ID > Hamilton-$SLURM_NTASKS-nodes-$SLURM_ARRAY_TASK_ID-cores.out


