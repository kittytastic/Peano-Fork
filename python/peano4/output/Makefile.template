CXX = {CXX}
CXXFLAGS = {CXXFLAGS} -DDimensions={DIM} -I. -I{CONFIGUREPATH}/src -DPeanoDebug=1 -g3
#CXXFLAGS = {CXXFLAGS} -DDimensions={DIM} -I. -I{CONFIGUREPATH}/src -DPeanoDebug=1
LDFLAGS = {LDFLAGS}
#LIBS = {CONFIGUREPATH}/src/libPeano4Core{DIM}d.a {CONFIGUREPATH}/src/libTarch.a {LIBS}
LIBS = {CONFIGUREPATH}/src/libPeano4Core{DIM}d_trace.a {CONFIGUREPATH}/src/libTarch_trace.a {LIBS}
#LIBS = {CONFIGUREPATH}/src/libPeano4Core{DIM}d_debug.a {CONFIGUREPATH}/src/libTarch_debug.a {LIBS}
DIM = {DIM}


SOURCES={SOURCES} 


OBJS=$(subst .cpp,.o,$(SOURCES))


all: solver


%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

    
solver: $(OBJS)
	$(CXX) $(LDFLAGS) $(OBJS) $(LIBS) -o peano4 

    
clean:
	rm -f $(OBJS)
	rm -f peano4
